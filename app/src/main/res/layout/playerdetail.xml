<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	tools:context=".PlayerDetail">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@+id/name"
			android:layout_toRightOf="@+id/condition"
			android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
			android:textStyle="bold"
			android:textAppearance="?android:attr/textAppearanceLarge">

		</TextView>

		<TextView
			android:id="@+id/condition"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@+id/condition"
			android:textAlignment="center"
			android:layout_below="@+id/logo"
			android:padding="5dp"
			android:width="70dp"
			android:gravity="center"
			android:textStyle="bold">

		</TextView>

		<TextView
			android:id="@+id/info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@+id/info"
			android:layout_below="@+id/name"
			android:layout_toRightOf="@+id/condition"
			android:layout_marginLeft="10dp">

		</TextView>

		<TextView
			android:id="@+id/position"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@+id/position"
			android:layout_toRightOf="@+id/info"
			android:layout_marginLeft="20dp"
			android:layout_alignParentRight="true"
			android:gravity="right"
			android:textAppearance="?android:attr/textAppearanceMedium">

		</TextView>

		<TextView
			android:id="@+id/overall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@+id/overall"
			android:layout_below="@+id/position"
			android:layout_toRightOf="@+id/info"
			android:layout_marginLeft="20dp"
			android:layout_alignParentRight="true"
			android:gravity="right"
			android:textAppearance="?android:attr/textAppearanceLarge">

		</TextView>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="10dp"
			android:orientation="vertical"
			android:layout_below="@id/info"
			android:background="#000000"
			android:layout_toRightOf="@id/condition"
			android:layout_marginTop="5dp"
			android:id="@+id/line"/>

		<TableLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/playerdetailTable"
			android:layout_below="@id/line"
			android:layout_toRightOf="@id/condition"
			android:layout_marginTop="5dp">

			<TableRow
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:id="@+id/row1">

				<TextView
					android:layout_height="wrap_content"
					android:text="CK"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_weight="1.0"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_weight="2.0"
					android:id="@+id/txtCk"/>

			</TableRow>

		</TableLayout>

	</RelativeLayout>

</LinearLayout>

